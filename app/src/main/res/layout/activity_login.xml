<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ruanjian.xin.xiaocaidao.ui.Login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/first_back"
        android:gravity="center_horizontal">

        <!--如果须要logo，此处为放置logo位置-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <!--用户名，密码，登陆-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/etaccount"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="账户名"
                android:singleLine="true"
                android:textSize="20sp"
                android:alpha="0.8"
                android:padding="15dp"
                android:background="@drawable/login_edit_style"/>
            <EditText
                android:id="@+id/etpwd"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="密码"
                android:singleLine="true"
                android:password="true"
                android:textSize="20sp"
                android:alpha="0.8"
                android:padding="15dp"
                android:background="@drawable/login_edit_style"/>
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="登  录"
                android:textSize="22dp"
                android:textColor="#ffffff"
                android:background="@drawable/button_style"/>
        </LinearLayout>
        <!--记住密码，注册-->
        <RelativeLayout
            android:id="@+id/bottom_mes"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/re_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住密码"
                android:textSize="14sp"
                android:textColor="#ededed" />
            <Button
                android:id="@+id/btnRegist"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="40dp"
                android:text="注册"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:background="#00000000"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
