<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <!--actionbar-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#ededed" >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="10dp">
            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/back_icon"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:paddingTop="10dp"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="设置"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center">

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <!--用户头像-->
    <LinearLayout
        android:id="@+id/avatar"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingBottom="2dp"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ruanjian.xin.xiaocaidao.domain.XCRoundImageView
                android:id="@+id/avatarImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/p1"
                android:layout_marginLeft="80dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/per5" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <!--用户名-->
    <LinearLayout
        android:id="@+id/Llaylayout_settingUserName"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/Tvlayout_settingUserName"
                android:gravity="left"
                android:text="飞翔的六毛"
                android:textSize="18sp"
                android:textColor="#707070"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/p1"
                android:layout_marginLeft="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/per5" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <!--密码-->
    <LinearLayout
        android:id="@+id/Llaylayout_settingPassWord"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:gravity="left"
                android:id="@+id/Tvlayout_settingPassWord"
                android:password="true"
                android:singleLine="true"
                android:text="123456"
                android:textSize="18sp"
                android:textColor="#707070"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@null"
                android:layout_marginLeft="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/per5" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <!--关于我们-->
    <LinearLayout
        android:id="@+id/Llaylayout_About"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于我们"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center">
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/per5" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <!--退出按钮-->
    <Button
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_background_selector"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="退    出"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:id="@+id/Btnlayout_settingExit" />
</LinearLayout>