<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#000">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <!--头像与用户名-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5">
                <!--用户头像-->
                <!--<ImageView-->
                <!--android:layout_width="60dp"-->
                <!--android:layout_height="60dp"-->
                <!--android:background="#fff"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginRight="8dp"/>-->
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cv_comment_user_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/user_pic"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF000000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="用户名"
                    android:textColor="#000"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>

            <!--标签-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:gravity="right"
                android:layout_marginRight="5dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp">
                    <TextView
                        android:id="@+id/Tvlv_commentMarker_01"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:background="#ffa726"
                        android:text="清淡"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginRight="8dp"/>
                    <TextView
                        android:id="@+id/Tvlv_commentMarker_02"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:background="#ffa726"
                        android:text="养生"
                        android:textSize="12sp"
                        android:textColor="#fff"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!--分割线-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d2d2d2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <!--晒图片-->
        <ImageView
            android:layout_width="280dp"
            android:layout_height="150dp"
            android:background="@drawable/img0"
            android:layout_marginLeft="5dp"/>

        <!--话题-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#自己闲暇时瞎做的，大家多多包涵（=。=|||）#"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>

        <!--底部信息-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp">
            <!--发布时间-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/Tvlv_commentUpDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="2016-11-8"
                    android:textSize="12sp"
                    android:textColor="#8f8f8f"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="发布"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!--点赞人数、评论数-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center">
                <!--点赞人数-->
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/priase"
                    android:gravity="center_vertical"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/Tvlv_commentPraise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="200"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="赞过"
                    android:textSize="12sp"
                    android:layout_marginRight="20dp"/>

                <!--评论数-->
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/comment"
                    android:gravity="center_vertical"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/Tvlv_commentComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="200"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="评论"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>